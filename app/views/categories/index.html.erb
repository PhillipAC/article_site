<p id="notice"><%= notice %></p>

<h1 class="center padded">Categories</h1>

<% @categories.in_groups_of(3).each do |group| %>
  <div class="row">
      <% group.each do |c| %>
        <% if c %>
          <div class="col-sm-4 center padded">
            <%= link_to image_tag(c.image, size: ("300")), c %><br>
            <%= link_to c.title, c, class: "center h2"%>
            <br>
          </div>
        <% end %>
      <% end %>
  </div>
<% end %>

<br>

<% if can? :create, Category %>
<%= link_to 'New Category', new_category_path %>
<% end %>
